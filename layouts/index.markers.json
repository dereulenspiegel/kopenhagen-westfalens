[
  {{- range $index, $page := where .Site.Pages "Content" "ne" ("" | safeHTML)  -}}
  {{- if eq $page.Type "promise" }}
  {{- if $page.Params.Location -}}
  {
    "lat": "{{$page.Params.Location.Lat}}",
    "lon": "{{$page.Params.Location.Lon}}",
    "title": "{{$page.Title}}",
    "state": "{{$page.Params.Promise}}",
    "link": "{{$page.Permalink}}"
  }
  {{- end -}}
  {{- end -}}
  {{- end -}}
]